# BABOK RAG Configuration

# Ollama Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Settings (Optional for faster responses)
USE_OPENAI=true
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_PROVIDER=ollama  # Change to "openai" for faster searching (requires API key)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Vector Store Settings
VECTOR_STORE_PATH=./vectorstore
COLLECTION_NAME=babok_techniques

# Chunking Settings
CHUNK_SIZE=800
CHUNK_OVERLAP=200

# Retrieval Settings
RETRIEVAL_TOP_K=5
RETRIEVAL_SIMILARITY_THRESHOLD=800.0

# UI Settings
APP_TITLE=BABOK Technique Recommender
APP_PORT=8501
